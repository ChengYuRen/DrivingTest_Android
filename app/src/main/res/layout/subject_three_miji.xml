<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="@drawable/bj"
        >

        <Button 
            android:id="@+id/button_subject_two_kaogui_title"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/fanhui"
            android:layout_weight="8"
            android:layout_marginTop="8dp"
            />
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="科三秘籍"
            android:textColor="@color/white"
            android:gravity="center_vertical|left"
            android:textSize="20dp" />

    </LinearLayout>

   <ScrollView 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollbars="vertical"
      >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >
    <!-- 其前边图片和颜色均可以修改 -->
    <Button 
        android:layout_marginTop="5dp"
        android:id="@+id/buttonsubject_three_koufen"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@drawable/subject_three"
        android:text="@string/subject_three_koufen"
        android:drawableLeft="@drawable/ok"
        android:gravity="center_vertical"
        android:textSize="20sp"
        />
    <Button 
        android:layout_marginTop="5dp"
        android:id="@+id/buttonsubject_three_lukaokoujue"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@drawable/login_button_selector"
        android:text="@string/subject_three_lukaokoujue"
        android:drawableLeft="@drawable/ok"
        android:gravity="center_vertical"
        android:textSize="20sp"
        />
     <Button 
        android:layout_marginTop="5dp"
        android:id="@+id/buttonsubject_three_qibu"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@drawable/subject_three"
        android:text="@string/subject_three_qibu"
        android:drawableLeft="@drawable/ok"
        android:gravity="center_vertical"
        android:textSize="20sp"
        />
     <Button 
        android:layout_marginTop="5dp"
        android:id="@+id/buttonsubject_three_jiaocha"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@drawable/login_button_selector"
        android:text="@string/subject_three_jiaocha"
        android:drawableLeft="@drawable/ok"
        android:gravity="center_vertical"
        android:textSize="20sp"
        />
     <Button 
        android:layout_marginTop="5dp"
        android:id="@+id/buttonsubject_three_diaotou"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@drawable/subject_three"
        android:text="@string/subject_three_diaotou"
        android:drawableLeft="@drawable/ok"
        android:gravity="center_vertical"
        android:textSize="20sp"
        />
     <Button 
        android:layout_marginTop="5dp"
        android:id="@+id/buttonsubject_three_yekao"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@drawable/login_button_selector"
        android:text="@string/subject_three_yekao"
        android:drawableLeft="@drawable/ok"
        android:gravity="center_vertical"
        android:textSize="20sp"
        />
     <Button 
        android:layout_marginTop="5dp"
        android:id="@+id/buttonsubject_three_wuzhao"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@drawable/subject_three"
        android:text="@string/subject_three_wuzhao"
        android:drawableLeft="@drawable/ok"
        android:gravity="center_vertical"
        android:textSize="20sp"
        />
     <Button 
        android:layout_marginTop="5dp"
        android:id="@+id/buttonsubject_three_lukaomiji"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@drawable/login_button_selector"
        android:text="@string/subject_three_lukaomiji"
        android:drawableLeft="@drawable/ok"
        android:gravity="center_vertical"
        android:textSize="20sp"
        />
     </LinearLayout>
     </ScrollView>
</LinearLayout>