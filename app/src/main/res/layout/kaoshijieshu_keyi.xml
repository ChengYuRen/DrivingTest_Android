<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="@drawable/bj"
        >

        <ImageView 
            android:id="@+id/button_malu_fanhui"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/fanhui"
            android:layout_weight="5"
            />
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            
            android:layout_weight="1"
            android:text=""
            android:gravity="center"
            android:textSize="20dp" />

    </LinearLayout>
	<ImageView
	    android:id="@+id/ImageView_malu"
		android:layout_width="fill_parent"
		android:layout_height="300dp"
		android:background="@drawable/bg_cheshen1"
	    />
	
	<TextView 
        android:id="@+id/textView_subject"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:text="小车-科目一"
        android:layout_marginLeft="5dp"
        android:gravity="center_vertical"
        />
	<ImageView 
          android:layout_width="fill_parent"
          android:layout_height="15dp"
          android:background="@drawable/jiakao_huise_line_heng"
          />  
          
	<LinearLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    >
	    <LinearLayout 
	        android:layout_width="fill_parent"
	   		android:layout_height="wrap_content"
	   		android:layout_weight="1"
	    	android:background="@drawable/kaoshijieguo_defentu"
	        >

	        <TextView
	            android:id="@+id/textView_score"
	            android:layout_width="fill_parent"
	            android:layout_height="100dp"
	            android:gravity="center"
	            android:textSize="20dp"
	            android:textColor="#EE4000"
	            android:text="111" />
	        
	    </LinearLayout>
	    
	    
	    <LinearLayout 
	        android:layout_width="fill_parent"
	   		android:layout_height="wrap_content"
	   		android:layout_weight="1"
	    	android:background="@drawable/kaoshijieguo_yongshitu"
	    	android:orientation="horizontal"
	        >
			<ImageView 
		        android:layout_width="2dp"
		        android:layout_height="100dp"
		        android:background="@drawable/jiakao_huise_line_shu"
	        />

	        <TextView
	            android:id="@+id/textView_time"
	            android:layout_width="fill_parent"
	            android:layout_height="100dp"
	            android:gravity="center"
	            android:textSize="20dp"
	            android:textColor="#9ACD32"
	            android:text="03:20" />
	        
	    </LinearLayout>    
	 	
	 </LinearLayout>
	 
		<ImageView 
          android:layout_width="fill_parent"
          android:layout_height="20dp"
          android:background="@drawable/jiakao_huise_line_heng"
          />  

		<LinearLayout 
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:orientation="vertical"
			>
	   <TextView 
	    android:layout_width="fill_parent"
	    android:layout_height="40dp"
	    android:gravity="center"
	    android:textStyle="italic"
	    android:text="还要多多练习，加油，你能行的！" 
	    android:textColor="#EE7942"
	    android:textSize="20dp"
	    />
	     
	   </LinearLayout>
	   <ImageView 
          android:layout_width="fill_parent"
          android:layout_height="fill_parent"
          android:background="@drawable/jiakao_huise_line_heng"
          />
	 
	
	   
</LinearLayout>