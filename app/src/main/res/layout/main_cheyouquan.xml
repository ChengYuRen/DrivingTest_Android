<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/empty_cart_view"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" 
    android:orientation="vertical"
    android:background="@drawable/cheyouquan_ceshi">

	<RelativeLayout
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent" >

	    <LinearLayout
	        android:id="@+id/linearLayout1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="140dp"
	        android:layout_marginTop="39dp"
	        android:gravity="center"
	        android:orientation="horizontal" >

	        <ImageView
	            android:id="@+id/cheyouquan_head"
	            android:layout_width="80dp"
	            android:layout_height="80dp"
	            android:gravity="center"
	            android:src="@drawable/login_head" />
	    </LinearLayout>

	    <LinearLayout
	        android:id="@+id/linearLayout2"
	        android:layout_width="70dp"
	        android:layout_height="70dp"
	        android:layout_marginLeft="140dp"
	        android:layout_marginTop="200dp"
	        android:gravity="center_horizontal"
	        android:orientation="horizontal" >

	        <ImageView
	            android:id="@+id/cheyouquan_1"
	            android:layout_width="70dp"
	            android:layout_height="70dp"
	            android:layout_weight="1"
	            android:gravity="center_horizontal"
	            android:src="@drawable/cheyouquan_touming"
	            android:textColor="#000000" />
	    </LinearLayout>

	    <LinearLayout
	        android:layout_width="400dp"
	        android:layout_height="70dp"
	        android:layout_marginLeft="5dp"
	        android:layout_marginTop="270dp"
	        android:gravity="center_horizontal"
	        android:orientation="horizontal" >

	        <LinearLayout
	            android:layout_width="70dp"
	            android:layout_height="70dp" >

	            <ImageView
	                android:id="@+id/cheyouquan_2"
	                android:layout_width="70dp"
	                android:layout_height="70dp"
	                android:layout_weight="1"
	                android:gravity="center_horizontal"
	                android:src="@drawable/cheyouquan_touming"
	                android:textColor="#000000" />
	        </LinearLayout>

	        <LinearLayout
	            android:layout_width="70dp"
	            android:layout_height="70dp"
	            android:layout_marginLeft="160dp" >

	            <ImageView
	                android:id="@+id/cheyouquan_3"
	                android:layout_width="70dp"
	                android:layout_height="70dp"
	                android:layout_weight="1"
	                android:gravity="center_horizontal"
	                android:src="@drawable/cheyouquan_touming"
	                android:textColor="#000000" />
	        </LinearLayout>
	    </LinearLayout>

	    <LinearLayout
	        android:layout_width="300dp"
	        android:layout_height="70dp"
	        android:layout_marginLeft="20dp"
	        android:layout_marginTop="385dp"
	        android:gravity="center_horizontal"
	        android:orientation="horizontal" >

	        <LinearLayout
	            android:layout_width="70dp"
	            android:layout_height="70dp" >

	            <ImageView
	                android:id="@+id/cheyouquan_4"
	                android:layout_width="70dp"
	                android:layout_height="70dp"
	                android:layout_weight="1"
	                android:gravity="center_horizontal"
	                android:src="@drawable/cheyouquan_touming"
	                android:textColor="#000000" />
	        </LinearLayout>

	        <LinearLayout
	            android:layout_width="70dp"
	            android:layout_height="70dp"
	            android:layout_marginLeft="70dp" >

	            <ImageView
	                android:id="@+id/cheyouquan_5"
	                android:layout_width="70dp"
	                android:layout_height="70dp"
	                android:layout_weight="1"
	                android:gravity="center_horizontal"
	                android:src="@drawable/cheyouquan_touming"
	                android:textColor="#000000" />
	        </LinearLayout>
	    </LinearLayout>

	    

	    <TextView
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:layout_below="@+id/linearLayout1"
	        android:gravity="center"
	        
	        android:textColor="@color/white"
	        android:textSize="16dp"
	        android:text="点击头像进入个人中心"
	         />

	</RelativeLayout>

</LinearLayout>


