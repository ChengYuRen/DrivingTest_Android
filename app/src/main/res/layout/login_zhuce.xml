<?xml version="1.0" encoding="utf-8"?>  
<LinearLayout  
  xmlns:android="http://schemas.android.com/apk/res/android"  
  android:orientation="vertical"  
  android:layout_width="fill_parent"  
  android:layout_height="fill_parent"  
  android:background="@drawable/zhuce">  
  <!-- padding 内边距   layout_margin 外边距   
                  android:layout_alignParentTop 布局的位置是否处于顶部 -->
                  
    <LinearLayout 
        android:layout_width="30dp"
        android:layout_height="60dp"
        android:orientation="horizontal"
        >

        <Button 
            android:id="@+id/button_subject_two_kaogui_title"
            android:layout_marginTop="12dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_weight="0.90"
            android:background="@drawable/fanhui"
            />
       

    </LinearLayout>

    <!-- 改这里 -->

    <RelativeLayout
        android:id="@+id/login_div_zhuce"
        android:layout_width="fill_parent"
        android:layout_height="357dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="110dp"
        android:layout_marginRight="40dp"
        android:background="#00000000"
        android:padding="15dip">

        <TextView
            android:id="@+id/login_user_input_zhuce"
            style="@style/normalText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:text="" />


        <EditText
            android:id="@+id/username_edit_zhuce"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/login_user_input_zhuce"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="142dp"
            android:background="#00000000"
            android:hint="@string/login_label_signin_zhaohao"
            android:inputType="text"
            android:singleLine="true"
            android:textSize="20dp">

            <requestFocus />
        </EditText>

        <EditText
            android:id="@+id/password_edit_zhuce"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/username_edit_zhuce"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="32dp"
            android:background="#00000000"
            android:hint="@string/login_label_signin_mima"
            android:inputType="textPassword"
            android:password="true"
            android:singleLine="true"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/anquamma_edit_zhuce"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="63dp"
            android:background="#00000000"
            android:hint="@string/login_label_signin_anquanma"
            android:inputType="text"
            android:singleLine="true"
            android:textSize="20dp" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp" >

        <Button
            android:id="@+id/signin_button_zhuce"
            android:layout_width="240dp"
            android:layout_height="42dp"
            android:background="@drawable/zhuce_button_bg" />
    </RelativeLayout>

</LinearLayout>