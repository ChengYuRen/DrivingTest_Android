<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/empty_cart_view"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" 
    android:orientation="vertical"
    android:background="#ffffffff">

        <LinearLayout
            android:id="@+id/dati"
            android:layout_width="match_parent"
            android:layout_height="40dp" 
            android:orientation="horizontal"
            android:background="@drawable/bj">

                <ImageView
                    android:id="@+id/back"
                    android:layout_width="40dip"
                    android:layout_height="30dip"
                    android:layout_marginTop="5dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                     android:gravity="bottom"
                    android:src="@drawable/fanhui"
                     />

                <TextView
                    android:id="@+id/textview_biaoti_dati"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                	android:layout_toRightOf="@+id/back"
                    android:text="顺序练习"
                    
                    android:textColor="#FFFFFF"
                    android:textSize="20sp" />
                 <TextView
			            android:id="@+id/textview_jiaojuan"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:layout_marginTop="8dp"
			            android:layout_marginLeft="30dp"
			            android:text="交卷"
			            android:textColor="#FFFF00"
			            android:textSize="20dp"
			            android:visibility="gone"
			            />
                
               <TextView 
                    android:id="@+id/textview_shijian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18dip"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="90dp"
                    android:textColor="#ff00ff"
                    android:text="考试开始"
                    android:visibility="gone"
                    /> 
               
                   
                

        </LinearLayout>
        
        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_above="@+id/dati_down"
            android:layout_below="@+id/dati"
            android:scrollbars="vertical" >
                
            <LinearLayout 
			    android:orientation="vertical"
			    android:layout_width="match_parent"
			    android:layout_height="match_parent"
			    android:layout_marginTop="5dp">
  
   				
			    <LinearLayout 
			        android:id="@+id/linear_timu"
			        android:orientation="horizontal"
				    android:layout_width="match_parent"
				    android:layout_height="match_parent"
				    android:layout_marginTop="5dp">
			        <ImageView
			          android:id="@+id/imageview_timuleixing"  
			        android:layout_marginTop="3dp"
		           	android:layout_width="18dp"
		            android:layout_height="18dp"
		            android:layout_marginLeft="3.0dip"/>
					<TextView  
					    android:id="@+id/TextView_timu" 
					    android:layout_width="fill_parent" 
					    android:layout_height="wrap_content" 
					    android:textSize="18dip"
					    android:textColor="@color/black"
					    android:text="这个地方  放题目"
					    />
    			</LinearLayout>

			    <ImageView
			        android:id="@+id/ImageView_datiimage"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_marginLeft="3.0dip" 
					android:layout_gravity="center"/>
"
    
			  <LinearLayout 
			        android:id="@+id/linear_a"
			        android:orientation="horizontal"
				    android:layout_width="match_parent"
