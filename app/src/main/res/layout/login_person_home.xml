<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="@drawable/bj"
        >

        <Button 
            android:id="@+id/button_subject_two_kaogui_title"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/fanhui"
            android:layout_weight="8"
            />
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            
            android:layout_weight="1"
            android:text="个人资料"
            android:textColor="@color/white"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="8dp"
            android:textSize="20dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/user__bg"

        >

        <ImageView
            android:id="@+id/imageTouXiang"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="80dp"
            android:background="@drawable/jiakao_guide_user_blue"

            >

        </ImageView>

    </LinearLayout>
    
   
    
    <!-- 昵称 -->

    <LinearLayout
       android:id="@+id/LinearLayout_nicheng"
       android:layout_width="fill_parent"
       android:layout_height="50dp"
       android:background="@drawable/person_home"
       android:orientation="horizontal" >
   
       <TextView       
       android:id="@+id/textview_nicheng"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
      
       android:clickable="true"
       android:drawablePadding="1.0dip"
       android:gravity="center_vertical"
       android:layout_marginTop="13dp"
       android:text="用户昵称"
      
       android:textSize="20.0sp" />
       
       <TextView       
       android:id="@+id/textview_nicheng02"
       android:layout_width="80dp"
       android:layout_height="wrap_content"
       android:layout_marginLeft="165dp"
       android:clickable="true"
       android:layout_marginTop="13dp"
       android:drawablePadding="1.0dip"
       android:gravity="center_vertical"
       android:text="用称哈哈"
      
       android:textSize="18.0sp" />
       
       

       <ImageView
           android:id="@+id/ImageView_nicheng"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
          
           android:layout_gravity="center_vertical"
           android:layout_marginRight="2dp"
          
           android:layout_marginLeft="15dp"
           android:background="@drawable/account__arrow_right" />

       </LinearLayout>
       
    <View
        android:layout_width="fill_parent"
        android:layout_height="2.0dip"
        android:background="@drawable/ic_shelf_category_divider" />   
        
    
    <!-- 性别 -->

    <LinearLayout
       android:id="@+id/LinearLayout_xingbie"
       android:layout_width="fill_parent"
       android:layout_height="50dp"
       android:background="@drawable/person_home"
       android:orientation="horizontal" >
   
       <TextView       
       android:id="@+id/textview_xingbie"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
      
       android:clickable="true"
       android:drawablePadding="1.0dip"
       android:gravity="center_vertical"
       android:text="性别 "
       android:layout_marginTop="13dp"
       android:textSize="20.0sp" />

       <TextView
           android:id="@+id/textview_xingbie01"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginLeft="200dp"
           android:layout_marginTop="13dp"
           android:clickable="true"
           android:drawablePadding="1.0dip"
           android:gravity="center_vertical"
           android:text="男"
           android:textSize="18.0sp" />

       <ImageView
           android:id="@+id/ImageView_xingbie"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
          
           android:layout_gravity="center_vertical"
           android:layout_marginRight="2dp"
          
           android:layout_marginLeft="71dp"
           android:background="@drawable/account__arrow_right" />

       </LinearLayout>
       
    <View
        android:layout_width="fill_parent"
        android:layout_height="2.0dip"
        android:background="@drawable/ic_shelf_category_divider" />  
        
    
    	<!-- 头像 -->

    <LinearLayout
       android:id="@+id/LinearLayout_phone"
       android:layout_width="fill_parent"
       android:layout_height="50dp"
       android:background="@drawable/person_home"
       android:orientation="horizontal" >
   
       <TextView       
       android:id="@+id/textview_phone"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       
       android:layout_marginTop="13dp"
       android:clickable="true"
       android:drawablePadding="1.0dip"
       android:gravity="center_vertical"
       android:text="联系方式"
       
       android:textSize="20.0sp" />
       
       <TextView       
       android:id="@+id/textview_phone01"
       android:layout_width="90dp"
       android:layout_height="wrap_content"
       android:layout_marginLeft="165dp"
       android:clickable="true"
       android:drawablePadding="1.0dip"
       android:gravity="center_vertical"
       android:text="12345678901"
      android:layout_marginTop="10dp"
       android:textSize="13.0sp" />
       
       <ImageView
           android:id="@+id/ImageView_phone"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
          
           android:layout_gravity="center_vertical"
           android:layout_marginRight="2dp"
          
           android:layout_marginLeft="4dp"
           android:background="@drawable/account__arrow_right" />
       

       </LinearLayout>
       
    <View
        android:layout_width="fill_parent"
        android:layout_height="2.0dip"
        android:background="@drawable/ic_shelf_category_divider" />   
        
        
   
    
   

</LinearLayout>