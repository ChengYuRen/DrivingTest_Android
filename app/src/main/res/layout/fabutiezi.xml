<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/luntan_tead"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/bj" >

        <ImageView
            android:id="@+id/fanhui_lt"
            android:layout_width="40dip"
            android:layout_height="30dip"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="5dp"
            android:gravity="bottom"
            android:src="@drawable/fanhui" />

        <TextView
            android:id="@+id/luntan_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/fanhui_lt"
            android:layout_centerHorizontal="true"
            android:text="参与讨论"
            android:textColor="#ffffff"
            android:textSize="20sp" />

    </RelativeLayout>
    <ScrollView
        android:id="@+id/talker_post_scrollView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/talker_post_top_relative" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

			<EditText
			    android:id="@+id/edittext_biaoti"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:layout_centerHorizontal="true"
			    android:layout_marginTop="17dp"
			    android:hint="请输入标题"
			    android:lines="2"
			    android:singleLine="false" >

                <requestFocus />
            </EditText>
            <EditText
                android:id="@+id/edittext_neirong"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edittext_biaoti"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="17dp"
                android:ems="10"
                android:gravity="top"
                android:hint="请输入内容"
                android:lines="5"
                android:singleLine="false" >

                
            </EditText>
         </RelativeLayout>
    </ScrollView>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp" >
            <ImageView 
                 android:id="@+id/imageview_fabu"
                  android:layout_width="match_parent"
                  android:layout_height="50dip"
                  android:layout_gravity="center"
                  android:src="@drawable/fabu" />
        </LinearLayout>

</LinearLayout>